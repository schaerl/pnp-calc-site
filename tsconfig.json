{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "preserveConstEnums": true,
        "outDir": "./dist",
        "module": "CommonJS",
        "moduleResolution": "node",
        "rootDir": "src",
        "lib": ["ES2017", "DOM"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}